---
const { data } = Astro.props;
---
<article class="reveal rounded-2xl border border-slate-200 bg-white shadow-soft overflow-hidden">
  {data.cover && <img src={data.cover} alt={data.title} class="w-full h-40 object-cover" />}
  <div class="p-5">
    <h3 class="font-semibold text-lg mb-2">{data.title}</h3>
    {data.summary && <p class="text-sm text-slate-600 mb-3">{data.summary}</p>}
    <div class="flex gap-3 text-sm">
      {data.link && <a href={data.link} class="underline">Demo</a>}
      {data.repo && <a href={data.repo} class="underline">Repo</a>}
    </div>
    {data.tags?.length ? (
      <div class="mt-3 flex flex-wrap gap-2">
        {data.tags.map(t => <span class="text-xs px-2 py-1 rounded-full bg-slate-100 border border-slate-200">{t}</span>)}
      </div>
    ) : null}
  </div>
</article>
