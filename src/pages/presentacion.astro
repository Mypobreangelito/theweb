---
import Base from "../layouts/Base.astro";
import LightboxGallery from "../components/LightboxGallery.astro";
const title = "Presentación — Sobre mí";
const description = "Resumen profesional, intereses y trayectoria.";

// Tus fotos EXACTAS (están en /public/Images/ con I mayúscula)
const fotos = [
  "Images/1733276030784.jpg",
  "Images/I34A9340-Enhanced-NR.jpeg",
  "Images/IMG_0217_VSCO.jpg",
  "Images/IMG_4830.jpg",
  "Images/IMG_4870.jpg",
];

// (Opcional) textos breves para cada foto
