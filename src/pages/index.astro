---
import Base from "../layouts/Base.astro";
const title = "Luis Ayala — Química Computacional";
const description = "Portafolio profesional: proyectos, investigación, CV y contacto.";
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + '/';
---
<Base {title} {description} pathname="/">
  <section class="reveal text-center space-y-6 py-12">
    <h1 class="text-4xl md:text-5xl font-bold leading-tight">Construyo ciencia con código.</h1>
    <p class="text-lg text-slate-600 max-w-3xl mx-auto">
      Química computacional · Teoría · Visualización · Educación abierta.
    </p>
    <div class="flex gap-4 justify-center">
      <a href={`${base}proyectos/`} class="px-5 py-3 rounded-2xl bg-slate-900 text-white shadow-soft hover:opacity-90">Ver proyectos</a>
      <a href={`${base}contacto/`} class="px-5 py-3 rounded-2xl border border-slate-900 hover:bg-slate-900 hover:text-white">Contactar</a>
      <a href={`${base}LAAR_ACV_VEN.pdf`} class="px-5 py-3 rounded-2xl border border-slate-300 hover:bg-slate-100">CV</a>
      <a href={`${base}escritos/`} class="px-5 py-3 rounded-2xl border border-indigo-600 text-indigo-600 hover:bg-indigo-600 hover:text-white">Journal</a>
    </div>
  </section>
  <!-- resto igual -->
</Base>

